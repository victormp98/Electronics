@using Electronic.Models
@model List<Producto>

@{
    ViewData["Title"] = "Administración de Productos";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Crear Nuevo Producto</a>
    <a asp-action="Inventory" class="btn btn-info">Gestión de Inventario</a>
    <a asp-action="SalesReports" class="btn btn-secondary">Reportes de Ventas</a>
    <a asp-action="ManageReturns" class="btn btn-warning">Gestión de Devoluciones</a>
    <a asp-action="ManageReviews" class="btn btn-dark">Gestión de Reseñas</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.FirstOrDefault().Name)</th>
            <th>@Html.DisplayNameFor(model => model.FirstOrDefault().Brand)</th>
            <th>@Html.DisplayNameFor(model => model.FirstOrDefault().Price)</th>
            <th>@Html.DisplayNameFor(model => model.FirstOrDefault().Stock)</th>
            <th>@Html.DisplayNameFor(model => model.FirstOrDefault().Category)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                    <td>@Html.DisplayFor(modelItem => item.Brand)</td>
                    <td>@Html.DisplayFor(modelItem => item.Price)</td>
                    <td>@Html.DisplayFor(modelItem => item.Stock)</td>
                    <td>@Html.DisplayFor(modelItem => item.Category)</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Eliminar</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

@if (Model == null || !Model.Any())
{
    <p>No hay productos disponibles para administrar.</p>
}
