@using Electronic.Models
@model List<Pedido>

@{
    ViewData["Title"] = "Gestión de Devoluciones";
}

<h1>@ViewData["Title"]</h1>

@if (TempData["Message"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["Message"]
    </div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["Error"]
    </div>
}

@if (Model == null || !Model.Any())
{
    <p>No hay solicitudes de devolución pendientes.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>ID Pedido</th>
                <th>Cliente</th>
                <th>Email Cliente</th>
                <th>Fecha Pedido</th>
                <th>Total</th>
                <th>Estado Actual</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.Id</td>
                    <td>@order.User?.Name</td>
                    <td>@order.User?.Email</td>
                    <td>@order.Date.ToShortDateString()</td>
                    <td>@order.Total.ToString("C")</td>
                    <td>@order.Status</td>
                    <td>
                        <form asp-action="UpdateReturnStatus" asp-controller="Admin" method="post" class="d-inline">
                            <input type="hidden" name="orderId" value="@order.Id" />
                            <input type="hidden" name="newStatus" value="@PedidoStatus.DEVOLUCION_APROBADA" /> @* Placeholder for new status *
                            <button type="submit" class="btn btn-success btn-sm">Aprobar</button>
                        </form>
                        <form asp-action="UpdateReturnStatus" asp-controller="Admin" method="post" class="d-inline ms-2">
                            <input type="hidden" name="orderId" value="@order.Id" />
                            <input type="hidden" name="newStatus" value="@PedidoStatus.DEVOLUCION_RECHAZADA" /> @* Placeholder for new status *
                            <button type="submit" class="btn btn-danger btn-sm">Rechazar</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

<div class="mt-4">
    <a asp-action="Index" class="btn btn-secondary">Volver al Panel de Administración</a>
</div>
