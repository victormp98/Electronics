@using Electronic.Models
@model Pedido

@{
    ViewData["Title"] = "Solicitar Devolución";
}

<h1>@ViewData["Title"]</h1>

<p>Estás solicitando una devolución para el pedido <strong>#@Model.Id</strong>.</p>

<div class="card mt-4">
    <div class="card-header">
        Detalles del Pedido
    </div>
    <div class="card-body">
        <p><strong>Fecha del Pedido:</strong> @Model.Date.ToShortDateString()</p>
        <p><strong>Total:</strong> @Model.Total.ToString("C")</p>
        <p><strong>Estado:</strong> @Model.Status</p>
        @if (Model.User != null)
        {
            <p><strong>Cliente:</strong> @Model.User.Name (@Model.User.Email)</p>
        }
    </div>
</div>

<h2 class="mt-4">Productos en el Pedido</h2>
@if (Model.DetallesPedido != null && Model.DetallesPedido.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Producto</th>
                <th>Cantidad</th>
                <th>Precio Unitario</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var detail in Model.DetallesPedido)
            {
                <tr>
                    <td>@detail.Producto.Name</td>
                    <td>@detail.Quantity</td>
                    <td>@detail.UnitPrice.ToString("C")</td>
                </tr>
            }
        </tbody>
    </table>
}

<h2 class="mt-4">Razón de la Devolución</h2>
<form asp-action="RequestReturn" asp-controller="Order" method="post">
    <input type="hidden" name="orderId" value="@Model.Id" />
    <div class="form-group">
        <label for="returnReason">Por favor, describe brevemente la razón de tu devolución:</label>
        <textarea name="returnReason" class="form-control" rows="5" required></textarea>
    </div>
    <button type="submit" class="btn btn-warning mt-3">Enviar Solicitud de Devolución</button>
    <a asp-action="MyOrders" class="btn btn-secondary mt-3">Cancelar</a>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
